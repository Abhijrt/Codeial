<li>
    <% if(locals.user && locals.user.id == post.user.id) { %>
    <a href="/posts/destroy/<%= post.id %>">X</a>
    <%}%>
    <%= post.content %><br>
    <%= post.user.name %>
</li>  
<div id ="posts-comment"> 
    <% if(locals.user) { %>
    <form action="/comments/create" method="POST">
        <textarea name="content"  cols="10" rows="3" placeholder="Type here...."></textarea>
        <input type="hidden" name ="post" value="<%= post._id %>">
        <input type="submit" value="Comment">                   
     </form>
     <% } %>
</div>  
<div id="post-comment-list">
    <ul id="post-comments <%= post._id %>">
        <% for(comment of post.comments) { %>
            <% if(locals.user && locals.user.id == comment.user.id) {%>
                <a href="/comments/destroy/<%= comment.id %>">X</a>
            <%}%>
            <li> <%= comment.content %> </li>
            <li> <%= comment.user.name %> </li>
        <% } %>
    </ul>
</div>     